<%- params = Templaty::Params.new(options) -%>
en:
  activerecord:
    attributes:
      <%= params.raw.model.name %>:
      <%- params.raw.model.fields.each do |field| -%>
        <%= field.name %>: <%= field.i18n.en %>
      <%- end -%>

  <%= params.raw.model.name %>:
    destroy:
      confirm: "Do you really want to delete the item %{name}?"

    one: <%= params.raw.model.i18n.en.one %>
    other: <%= params.raw.model.i18n.en.other %>
