<%# coding: UTF-8 -%>
<%- params = Templaty::Params.new(options) -%>
ru:
  activerecord:
    attributes:
      <%= params.raw.model.name %>:
      <%- params.raw.model.fields.each do |field| -%>
        <%= field.name %>: <%= field.i18n.ru %>
      <%- end -%>

  <%= params.raw.model.name %>:
    destroy:
      confirm: "Вы действительно хотите удалить элемент %{name}?"

    one: <%= params.raw.model.i18n.ru.one %>
    other: <%= params.raw.model.i18n.ru.other %>
