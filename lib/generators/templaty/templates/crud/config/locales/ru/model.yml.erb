<%- fields = Templaty::Helper.fields(options).sort -%>
ru:
  activerecord:
    attributes:
      <%= options[:table].singularize %>:
      <%- fields.sort.each do |field| -%>
        <%= field %>: <%= field.sub('_cents', '').split('_').map(&:capitalize).join(' ') %>
      <%- end -%>

  <%= options[:table].singularize %>:
    destroy:
      confirm: "Вы действительно хотите удалить элемент %{name}?"

    other: Кампании
