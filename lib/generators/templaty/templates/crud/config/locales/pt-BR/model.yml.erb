<%- params = Templaty::Params.new(options) -%>
pt-BR:
  activerecord:
    attributes:
      <%= params.raw.model.name %>:
      <%- params.raw.model.fields.each do |field| -%>
        <%= field.name %>: <%= field.i18n['pt-BR'] %>
      <%- end -%>

  <%= params.raw.model.name %>:
    destroy:
      confirm: "Deseja mesmo excluir o item %{name}?"

    one: <%= params.raw.model.i18n['pt-BR'].one %>
    other: <%= params.raw.model.i18n['pt-BR'].other %>
